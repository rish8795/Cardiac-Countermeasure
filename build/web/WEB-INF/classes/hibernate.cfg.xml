<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
    <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=cardiac</property>
    <property name="hibernate.connection.username">sa</property>
    <property name="hibernate.connection.password">icreate</property>
    <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
    <property name="hibernate.current_session_context_class">
    org.hibernate.context.internal.ThreadLocalSessionContext
    </property>
    
    <!--<property name="hibernate.connection.pool_size"></property>-->
    <mapping class="model.Login"/>
    <mapping class="model.Addressdetails"/>
    <mapping class="model.Lab"/>
