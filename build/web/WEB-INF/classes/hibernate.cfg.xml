    <mapping class="model.State"/>
    <mapping class="model.City"/>
    <mapping class="model.DoctorAppointment"/>
    <mapping class="model.LabAppointment"/>
    <mapping class="model.Labtest"/>
    <mapping class="model.Test"/>
    <mapping class="model.PatienttestDetail"/>
    <mapping class="model.Admin"/>
    <mapping class="model.FactorOption"/>
    <mapping class="model.FactorDetails"/>
    <mapping class="model.PatientfactorAnswer"/>
    <mapping class="model.AbsulateRiskMale"/>
    <mapping class="model.AbsoluteRiskFemale"/>
    <mapping class="model.Calculationmeteredata"/>
    <mapping class="model.TestRecommend"/>
    <mapping class="model.Blog"/>
    
  </session-factory>
</hibernate-configuration>
